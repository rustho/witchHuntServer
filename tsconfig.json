{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "typeRoots": ["./types"],
    "outDir": "./dist",
    "baseUrl": "./",
  },
  "exclude": ["node_modules", "dist", "migrations"]
}

